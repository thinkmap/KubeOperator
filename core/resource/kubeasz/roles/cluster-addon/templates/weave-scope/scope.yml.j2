apiVersion: v1
kind: List
items:
  - apiVersion: v1
    kind: ServiceAccount
    metadata:
      name: f2c-weave-scope
      labels:
        name: f2c-weave-scope
      namespace: kube-operator
  - apiVersion: rbac.authorization.k8s.io/v1beta1
    kind: ClusterRole
    metadata:
      name: f2c-weave-scope
      labels:
        name: f2c-weave-scope
    rules:
      - apiGroups:
          - ''
        resources:
          - pods
        verbs:
          - get
          - list
          - watch
          - delete
      - apiGroups:
          - ''
        resources:
          - pods/log
          - services
          - nodes
          - namespaces
          - persistentvolumes
          - persistentvolumeclaims
        verbs:
          - get
          - list
          - watch
      - apiGroups:
          - apps
        resources:
          - statefulsets
        verbs:
          - get
          - list
          - watch
      - apiGroups:
          - batch
        resources:
          - cronjobs
          - jobs
        verbs:
          - get
          - list
          - watch
      - apiGroups:
          - extensions
        resources:
          - deployments
          - daemonsets
        verbs:
          - get
          - list
          - watch
      - apiGroups:
          - extensions
        resources:
          - deployments/scale
        verbs:
          - get
          - update
      - apiGroups:
          - storage.k8s.io
        resources:
          - storageclasses
        verbs:
          - get
          - list
          - watch
      - apiGroups:
          - volumesnapshot.external-storage.k8s.io
        resources:
          - volumesnapshots
          - volumesnapshotdatas
        verbs:
          - list
          - watch
  - apiVersion: rbac.authorization.k8s.io/v1beta1
    kind: ClusterRoleBinding
    metadata:
      name: f2c-weave-scope
      labels:
        name: f2c-weave-scope
    roleRef:
      kind: ClusterRole
      name: f2c-weave-scope
      apiGroup: rbac.authorization.k8s.io
    subjects:
      - kind: ServiceAccount
        name: f2c-weave-scope
        namespace: kube-operator
  - apiVersion: apps/v1
    kind: Deployment
    metadata:
      name: f2c-weave-scope-app
      labels:
        name: f2c-weave-scope-app
        app: f2c-weave-scope
        weave-cloud-component: scope
        weave-scope-component: app
      namespace: kube-operator
    spec:
      selector:
        matchLabels:
          name: f2c-weave-scope-app
          app: f2c-weave-scope
          weave-cloud-component: scope
          weave-scope-component: app
      replicas: 1
      revisionHistoryLimit: 2
      template:
        metadata:
          labels:
            name: f2c-weave-scope-app
            app: f2c-weave-scope
            weave-cloud-component: scope
            weave-scope-component: app
        spec:
          containers:
            - name: app
              args:
                - '--mode=app'
                - '--app.basicAuth=true'
                - '--app.basicAuth.username=admin'
                - '--app.basicAuth.password=admin123'
              command:
                - /home/weave/scope
              env: []
              image: '{{registry_prefix}}:{{registry_port}}/{{scope_image}}:{{scope_version}}'
              imagePullPolicy: IfNotPresent
              ports:
                - containerPort: 4040
                  protocol: TCP
  - apiVersion: v1
    kind: Service
    metadata:
      name: f2c-weave-scope-app
      labels:
        name: f2c-weave-scope-app
        app: f2c-weave-scope
        weave-cloud-component: scope
        weave-scope-component: app
      namespace: kube-operator
    spec:
      type: NodePort
      ports:
        - name: app
          port: 80
          protocol: TCP
          targetPort: 4040
      selector:
        name: f2c-weave-scope-app
        app: f2c-weave-scope
        weave-cloud-component: scope
        weave-scope-component: app
  - apiVersion: apps/v1
    kind: Deployment
    metadata:
      name: f2c-weave-scope-cluster-agent
      labels:
        name: f2c-weave-scope-cluster-agent
        app: f2c-weave-scope
        weave-cloud-component: scope
        weave-scope-component: cluster-agent
      namespace: kube-operator
    spec:
      selector:
        matchLabels:
          name: f2c-weave-scope-cluster-agent
          app: f2c-weave-scope
          weave-cloud-component: scope
          weave-scope-component: cluster-agent
      replicas: 1
      revisionHistoryLimit: 2
      template:
        metadata:
          labels:
            name: f2c-weave-scope-cluster-agent
            app: f2c-weave-scope
            weave-cloud-component: scope
            weave-scope-component: cluster-agent
        spec:
          containers:
            - name: scope-cluster-agent
              args:
                - '--mode=probe'
                - '--probe-only'
                - '--probe.kubernetes.role=cluster'
                - '--probe.http.listen=:4041'
                - '--probe.basicAuth=true'
                - '--probe.basicAuth.username=admin'
                - '--probe.basicAuth.password=admin123'
                - 'f2c-weave-scope-app.kube-operator.svc.cluster.local:80'
              command:
                - /home/weave/scope
              env: []
              image: '{{registry_prefix}}:{{registry_port}}/{{scope_image}}:{{scope_version}}'
              imagePullPolicy: IfNotPresent
              ports:
                - containerPort: 4041
                  protocol: TCP
              resources:
                requests:
                  cpu: 100m
                  memory: 100Mi
          serviceAccountName: f2c-weave-scope
  - apiVersion: apps/v1
    kind: DaemonSet
    metadata:
      name: f2c-weave-scope-agent
      labels:
        name: f2c-weave-scope-agent
        app: f2c-weave-scope
        weave-cloud-component: scope
        weave-scope-component: agent
      namespace: kube-operator
    spec:
      selector:
        matchLabels:
          name: f2c-weave-scope-agent
          app: f2c-weave-scope
          weave-cloud-component: scope
          weave-scope-component: agent
      minReadySeconds: 5
      template:
        metadata:
          labels:
            name: f2c-weave-scope-agent
            app: f2c-weave-scope
            weave-cloud-component: scope
            weave-scope-component: agent
        spec:
          containers:
            - name: scope-agent
              args:
                - '--mode=probe'
                - '--probe-only'
                - '--probe.kubernetes.role=host'
                - '--probe.docker.bridge=docker0'
                - '--probe.docker=true'
                - '--probe.basicAuth=true'
                - '--probe.basicAuth.username=admin'
                - '--probe.basicAuth.password=admin123'
                - 'f2c-weave-scope-app.kube-operator.svc.cluster.local:80'
              command:
                - /home/weave/scope
              env: []
              image: '{{registry_prefix}}:{{registry_port}}/{{scope_image}}:{{scope_version}}'
              imagePullPolicy: IfNotPresent
              resources:
                requests:
                  cpu: 100m
                  memory: 100Mi
              securityContext:
                privileged: true
              volumeMounts:
                - name: scope-plugins
                  mountPath: /var/run/scope/plugins
                - name: sys-kernel-debug
                  mountPath: /sys/kernel/debug
                - name: docker-socket
                  mountPath: /var/run/docker.sock
          dnsPolicy: ClusterFirstWithHostNet
          hostNetwork: true
          hostPID: true
          tolerations:
            - effect: NoSchedule
              operator: Exists
          volumes:
            - name: scope-plugins
              hostPath:
                path: /var/run/scope/plugins
            - name: sys-kernel-debug
              hostPath:
                path: /sys/kernel/debug
            - name: docker-socket
              hostPath:
                path: /var/run/docker.sock
      updateStrategy:
        type: RollingUpdate
  - apiVersion: extensions/v1beta1
    kind: Ingress
    metadata:
      name: f2c-weave-ingress
      namespace: kube-operator
    spec:
      rules:
      - host: scope.weave.{{ APP_DOMAIN }}
        http:
          paths:
          - path: /
            backend:
              serviceName: f2c-weave-scope-app
              servicePort: 80